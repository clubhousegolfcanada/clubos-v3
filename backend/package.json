{
  "name": "clubos-v3-backend",
  "version": "3.0.0",
  "description": "ClubOS V3 Backend - Clean Core",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "test:changed": "NODE_ENV=test jest --onlyChanged",
    "test:ci": "NODE_ENV=test jest --ci --coverage --maxWorkers=2",
    "lint": "eslint src/",
    "migrate": "node src/db/migrate.js",
    "migrate:up": "node src/db/migrationRunner.js up",
    "migrate:down": "node src/db/migrationRunner.js down",
    "migrate:status": "node src/db/migrationRunner.js status",
    "setup": "bash scripts/setup.sh",
    "deploy": "bash scripts/deploy.sh",
    "validate-env": "node scripts/validate-env.js",
    "health-check": "curl -s http://localhost:3001/health/detailed | jq",
    "logs:errors": "tail -f logs/errors-*.log | jq",
    "create-admin": "node scripts/create-admin.js"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "joi-to-swagger": "^6.2.0",
    "jsonwebtoken": "^9.0.2",
    "openai": "^4.20.1",
    "pg": "^8.11.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
